@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap')

*
    margin 0
    padding 0
    box-sizing border-box

body 
    font-family 'Montserrat', sans-serif !important
    font-weight 500 !important
    background-color #F7F9FD !important
    color #242E4C !important

main 
    margin-top 4rem
    max-width 710px
    width 95%
    box-shadow 0 10px 10px darken(#F7F9FD, 10%)

    img 
        width 140px
        height 140px

    p
        max-width 310px
        width 100%
        font-size 0.875rem
        line-height 1.75

    .save-info
        background-color #F7F9FD   

        h6 
            font-size 1.125rem 

        span
            font-size 0.875rem

        input
            outline none
            cursor pointer
            border 1.5px solid #DFE4F4   
            color inherit
            max-width 350px
            width 100% 
            font-weight 500

        .save
            font-weight inherit
            background-color darken(#D5DCF0,20%)
            max-width 111px
            width 100%

    .back 
        background-color #3457DC
        box-shadow 0 8px 8px lighten(#3457DC, 50%)
        max-width 340px
        width 100%    
        font-weight 500    