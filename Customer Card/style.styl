@import url('https://fonts.googleapis.com/css2?family=Mulish:wght@600&display=swap')

*
    margin 0
    padding 0
    box-sizing border-box

body
    font-family 'Mulish', sans-serif !important
    background-color #EDEEF7 !important
    color #242E4C !important

main 
    margin-top 6rem
    max-width 474px
    width 95%
    box-shadow 0 10px 10px darken(#EDEEF7, 20%)

    img 
        width 90px
        height 90px

    h4 
        max-width 240px
        width 100%
        font-size 1.5625rem 

    p 
        font-size 0.875rem 

    button 
        background linear-gradient(to right, #7CBAFB, #9289FF)    