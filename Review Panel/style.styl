@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700&display=swap')

*
    margin 0
    padding 0
    box-sizing border-box

body 
    font-family 'Montserrat', sans-serif !important
    background-color #F9FBFD !important
    color #242E4C !important

main 
    margin-top 6rem
    max-width 431px
    width 95%
    box-shadow 0 8px 8px darken(#F9FBFD, 10%)
    
    .fa-star
        color #FFDC64

    .rate
        font-size 1.5rem 

    .people
        font-size 0.9375rem

    hr
        border 2px solid darken(#E4E9FA, 20%)    

    .question
        font-size 1.125rem 

    .btns
        button
            max-width 140px 
            width 100%    

            &.yes 
                background-color #8E9EEC

            &.no 
                border 2px solid #D7DCED
                color #A7AFCA